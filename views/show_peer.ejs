<%-include('partials/header')%>
<center>
  <section class="intro" style="width:100%;height:100%; content: fill;">
    <div class="bg-image h-100" style="background-image: url('https://mdbootstrap.com/img/Photos/new-templates/tables/img2.jpg');">
      <div class="mask d-flex align-items-center h-100" style="background-color: rgba(0,0,0,.25);">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-12">
              <div class="card bg-dark shadow-2-strong">
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-dark table-borderless mb-0">
                      <thead>
                        <tr>
                          <th scope="col">Name</th>
                          <th scope="col">Age</th>
                          <th scope="col">Phone no.</th>
                          <th scope="col">City</th>
                          <th scope="col">State</th>
                          <th scope="col">Description</th>
                          <th scope="col">Image</th>
                        </tr>
                      </thead>
                      <tbody>
                          <% peers.forEach(function(pear){ %>
                        <tr>
                          <th scope="row"><%= pear.fname%> <%= pear.lname%></th>
                          <td><%= pear.age%></td>
                          <td><%= pear.phone%></td>
                          <td><%= pear.city%></td>
                          <td><%= pear.state%></td>
                          <td><%= pear.description.substring(0,15)+"..."%></td>
                          <td><img style="height:64px; width:67px;" src="./uploads/<%= pear.image_up%>" alt="image"></td>
                          <td> 
                             <a class="btn btn-light" href="showpeerOne/<%=pear.id%>"> <strong>View</strong> </a>   
                            <!-- <button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModalCenter">
                                 <strong>  <a href="<%= pear.id %>"></a> View   </strong>
                            </button> -->
                          </td>
                          <td> 
                            <a href="#" class="btn btn-success a-btn-slide-text">
                            <span><strong>Accept</strong></span>            
                            </a>
                          </td>
                          <td> 
                            <a href="#" class="btn btn-danger a-btn-slide-text">
                            <span><strong>Discard</strong></span>            
                            </a>
                      </td>
                        </tr>
                        <% })  %> 

                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</center>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
    Launch demo modal
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
            <% peers.forEach(function(pear){ %>
        <div class="modal-body">
          ...
          <h3><%= pear.fname%> <%= pear.lname %></h3>
                          <span><%= pear.age %></span>
                          <span><%= pear.phone %></span>
                          <span><%= pear.city %></span>
                          <span><%= pear.state %></span>
                          <span><%= pear.description %> </span>
                          <span><img style="height:64px; width:67px;" src="./uploads/<%= pear.image_up%>" alt="image"></span>
        </div>
        <% })  %> 
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

<%-include('partials/footer')%>
